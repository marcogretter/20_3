#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
#define N 20

int numeriPrimi(int n);
int multipli(int v[N]);

int main(){
    int v[N];
    int i;
    
    for (i=0; i<N; i++) {
        printf("Inserisci numeri dell'array:\n");
        scanf("%d",&v[i]);
    }
    
    return 0;
}
int multipli(int v[N])
{
    int i,temp=-1,cont=0,cont1=0;
    for (i=0; i<N; i++) {
        if(numeriPrimi(v[i])){
            cont++;
            if(temp==-1){
                cont1++;
                temp=i;
            }
            if(temp!=-1&&cont!=1){
                if(i-temp==3){
                    temp=i;
                    cont1++;
                }
            }
        }
    }
    if(cont==cont1)
        return 1;
    return 0;
}


int numeriPrimi(int n)
{
    int i,cont=0;
    for (i=1; i<n; i++) {
        if(n%i==0)
            cont++;
    }
    if(cont==1)
        return 1;
    return 0;
}
